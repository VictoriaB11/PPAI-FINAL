<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence" version="3.0">
    <!-- Esta en rojo porque no esta registrada como esquema XML local,
    entonces no puede validar el XML contra un XSD, no rompe nada.-->

    <persistence-unit name="ppaiPU">
        <!-- Clases existentes -->
        <class>org.example.Modelos.Rol</class>
        <class>org.example.Modelos.Empleado</class>
        <class>org.example.Modelos.Sismografo</class>
        <class>org.example.Modelos.CambioEstado</class>
        <class>org.example.Modelos.Usuario</class>

        <!-- NUEVA JERARQUÍA DE ESTADOS -->

        <!-- 1. La clase abstracta base -->
        <class>org.example.Modelos.EstadoSismografo</class>

        <!-- 2. TODAS las clases concretas que hereden de ella -->
        <class>org.example.Modelos.InhabilitadoPorInspeccion</class>
        <class>org.example.Modelos.FueraDeServicio</class>
        <!-- Agrega aquí cualquier otro estado concreto que tengas -->

        <!-- La clase Estado independiente (para Ordenes) -->
        <class>org.example.Modelos.Estado</class>





        <!--PU = Persistence Unit (Unidad de Persistencia), es el nombre de la configuración de JPA -->
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.sqlite.JDBC"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:sqlite:ppai.db"/>

            <!-- Dialecto SQLite para Hibernate 6 -->
            <property name="hibernate.dialect" value="org.hibernate.community.dialect.SQLiteDialect"/>

            <!-- Para TP: crea/actualiza tablas automático -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>

            <!-- Logs SQL para debug -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
